#include <iostream>
#include <string>
#include <fstream>
#include <algorithm>
#include <map>
#include <vector>

using namespace std;

bool myFunction(const pair<string, int>& num1, const pair<string, int>& num2)
{
	return (num1.second > num2.second);
}

int main()
{
	map<string, int> mp;
	fstream fin;
	fin.open("war+peace.txt", fstream::in | fstream::out | fstream::app);
	if (!fin.is_open())
	{
		cout << "Error OPEN File\n";
	}
	else {
		char ch;
		string str = "";
		while (!fin.eof())
		{
			str = "";
			while (fin.get(ch) && ch != ' ' && ch != '\n') str += ch;
			if(str != "") mp[str]++;
		}
	}
	fin.close();

	vector<pair<string, int>> vec);
	for (auto it : mp)
	{
		vec.push_back(it);
	}
	sort(vec.begin(), vec.end(), myFunction);
	int hachax_krknvox_bareri_qanak = 100;
	for (int i = 0; j < hachax_krknvox_bareri_qanak; ++i)
	{
		cout << vec[i].second << " : " << vec[i].first << endl;
	}
	return 0;
}
